#! /bin/bash

# shellcheck source=../scripts/helpers/index.sh
source /usr/local/bin/helpers/index.sh

source ./common/accounts/update-account.sh

function _main
{
  local MAIL_ACCOUNT="${1}"
  shift
  local PASSWD="${*}"

  _validate_parameters
  _update_account_password_in_db '/tmp/docker-mailserver/dovecot-masters.cf'
}

function __usage { echo 'Usage: updatedovecotmasteruser <MAIL ACCOUNT> [PASSWORD]' ; }

function _validate_parameters
{
  _arg_expect_mail_account
}

_main "${@}"
