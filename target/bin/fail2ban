#! /bin/bash

# shellcheck source=../scripts/helpers/index.sh
source /usr/local/bin/helpers/index.sh

function usage { echo "Usage: ${0} [<unban> <ip-address>]" ; }

unset JAILS
declare -a JAILS
IP_REGEXP='((25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.){3}(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)'

for LIST in $(fail2ban-client status | grep "Jail list" | cut -f2- | sed 's/,/ /g')
do
  JAILS+=("${LIST}")
done

if [[ -z ${1} ]]
then
  NO_IPS_BANNED=1

  for JAIL in "${JAILS[@]}"
  do
    BANNED_IPS=$(fail2ban-client status "${JAIL}" \
      | grep 'Banned IP list' \
      | grep -oE "${IP_REGEXP}")

    if [[ -n ${BANNED_IPS} ]]
    then
      echo "Banned in ${JAIL}: ${BANNED_IPS//$'\n'/, }"
      NO_IPS_BANNED=0
    fi
  done

  [[ ${NO_IPS_BANNED} -eq 1 ]] && echo "No IPs have been banned."
else

  case ${1} in

    unban)
      shift
      if [[ -n ${1} ]]
      then

        for JAIL in "${JAILS[@]}"
        do
          RESULT="$(fail2ban-client set "${JAIL}" unbanip "${@}" 2>&1)"

          [[ ${RESULT} != *"is not banned"* ]] && [[ ${RESULT} != *"NOK"* ]] && echo -e "Unbanned IP from ${JAIL}: ${RESULT}"
        done

      else
        echo "You need to specify an IP address. Run './setup.sh debug fail2ban' to get a list of banned IP addresses." >&2
        exit 0
      fi
      ;;

    *)
      usage
      _exit_with_error "unknown command: ${1}"
      ;;

  esac

fi

exit 0
