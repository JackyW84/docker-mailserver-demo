#! /bin/bash

# shellcheck source=../scripts/helpers/index.sh
source /usr/local/bin/helpers/index.sh

DATABASE=${DATABASE:-/tmp/docker-mailserver/postfix-virtual.cf}

[[ -f ${DATABASE} ]] || _errex "No 'postfix-virtual.cf' file present"
[[ -s ${DATABASE} ]] || _errex "Empty 'postfix-virtual.cf' - no aliases have been added"

grep -v "^\s*$\|^\s*\#" "${DATABASE}"
exit 0
