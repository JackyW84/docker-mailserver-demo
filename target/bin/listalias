#! /bin/bash
# vim: et ai si ts=2 sts=2 sw=2

DATABASE=${DATABASE:-/tmp/docker-mailserver/postfix-virtual.cf}

errex() {
  echo "$@" 1>&2
  exit 1
}

[ -f $DATABASE ] || errex "No postfix-virtual.cf file"
[ -s $DATABASE ] || errex "Empty postfix-virtual.cf - no aliases have been added"

cat $DATABASE
